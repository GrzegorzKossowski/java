<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="mainRoot" xmlns="http://javafx.com/javafx/8.0.92" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.adminController">
    <children>
        <HBox>
            <children>
                <MenuBar HBox.hgrow="ALWAYS">
                    <menus>
                        <Menu mnemonicParsing="false" text="File">
                            <items>
                                <MenuItem fx:id="logoutMenuItem" mnemonicParsing="false" onAction="#logoutAction" text="Logout" />
                                <MenuItem accelerator="Ctrl+Q" mnemonicParsing="false" onAction="#quitAction" text="Quit" />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Edit">
                            <items>
                                <MenuItem mnemonicParsing="false" text="Delete" />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Help">
                            <items>
                                <MenuItem mnemonicParsing="false" text="About" />
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
            </children>
        </HBox>
        <HBox VBox.vgrow="ALWAYS">
            <children>
                <TabPane tabClosingPolicy="UNAVAILABLE" HBox.hgrow="ALWAYS">
                    <tabs>
                        <Tab text="Add new user">
                            <content>
                                <VBox alignment="TOP_CENTER" spacing="10.0" style="-fx-border-color: cccccc;">
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                           <children>
                              <TableView VBox.vgrow="ALWAYS">
                                <columns>
                                  <TableColumn maxWidth="1.7976931348623157E308" prefWidth="145.0" text="Login" />
                                  <TableColumn maxWidth="1.7976931348623157E308" prefWidth="73.0" text="Priv" />
                                </columns>
                              </TableView>
                              <Separator prefWidth="200.0" />
                              <VBox alignment="BOTTOM_CENTER" spacing="10.0">
                                 <children>
                                    <TextField promptText="login" />
                                    <PasswordField promptText="password" />
                                    <ButtonBar prefHeight="40.0" prefWidth="200.0">
                                      <buttons>
                                          <ChoiceBox />
                                        <Button mnemonicParsing="false" text="Add" />
                                          <Button disable="true" mnemonicParsing="false" text="Delete" />
                                      </buttons>
                                    </ButtonBar>
                                 </children>
                              </VBox>
                           </children>
                                </VBox>
                            </content>
                        </Tab>
                    </tabs>
                </TabPane>
            </children>
        </HBox>
    </children>
</VBox>
