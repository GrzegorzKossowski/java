<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>


<VBox xmlns="http://javafx.com/javafx/8.0.92" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.MainController">
    <children>
        <MenuBar>
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Quit" onAction="#quitAction" accelerator="CTRL+Q"  />
                    </items>
                </Menu>
                <Menu disable="true"  mnemonicParsing="false" text="Edit">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Delete" />
                    </items>
                </Menu>
                <Menu disable="true"  mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <ToolBar prefHeight="40.0" prefWidth="200.0">
            <items>
                <Button fx:id="shuffleButton" mnemonicParsing="false" onAction="#shuffleList"  >
                    <graphic>
                        <ImageView>
                            <Image url="@../images/16ico/shuffle.png" />
                        </ImageView>
                    </graphic>
                </Button>
                <javafx.scene.control.Separator />
                <Button fx:id="chapterDown" mnemonicParsing="false" text="&lt;&lt;" onAction="#chapterDown" />
                <Label fx:id="chapterLbl" text="" />
                <Button fx:id="chapterUp" mnemonicParsing="false" text="&gt;&gt;" onAction="#chapterUp" />
            </items>
        </ToolBar>
        <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
            <tabs>
                <Tab text="Sequence">
                    <content>
                        <VBox alignment="TOP_CENTER" spacing="10.0" style="-fx-border-color: cccccc;">
                            <children>
                                <HBox fx:id="imagePlaceholder" alignment="CENTER" VBox.vgrow="ALWAYS">
                                    <VBox.margin>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                    </VBox.margin>
                                </HBox>
                        
                                <Label fx:id="wordLbl" text="" textAlignment="CENTER" VBox.vgrow="ALWAYS">
                                    <font>
                                        <Font size="40.0" />
                                    </font>
                                </Label>
                                <HBox alignment="CENTER" spacing="10.0">
                                    <children>
                                        <Button mnemonicParsing="false" onAction="#previousItemAcion" text="&lt;&lt;" />
                                        <Button fx:id="playSound" mnemonicParsing="false" onAction="#playSoundAction" text="Play sound" />
                                        <Button mnemonicParsing="false" onAction="#nextItemAction" text="&gt;&gt;" />
                                    </children>
                                    <VBox.margin>
                                        <Insets />
                                    </VBox.margin>
                                </HBox>
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </VBox>
                    </content>
                </Tab>
                <Tab disable="true" text="Random">
                    <content>
                        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0">
                            <children>
                                <Pane prefHeight="200.0" prefWidth="200.0" />
                            </children>
                        </VBox>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </children>
</VBox>
